{
  "port": 3000,
  "database": {
    "type": "sqlite",
    "database": "db.sqlite",
    "synchronize": true,
    "migrationsRun": false
  },
  "logging": {
    "directory": "logs",
    "level": "info",
    "handleExceptions": true
  },
  "captcha": {
    "ttl": 120,
    "deleteExpiredInterval": 120,
    "solutionLength": 4
  },
  "session": {
    "idLength": 4,
    "keyLength": 10,
    "nameMaxLength": 30
  },
  "member": {
    "idLength": 8,
    "secretLength": 16
  },
  "client": {
    "memberPingInterval": 15
  }
}
