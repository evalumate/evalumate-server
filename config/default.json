{
  "port": 3000,
  "publicUrl": "http://localhost:3000",
  "database": {
    "type": "sqlite",
    "database": "db.sqlite",
    "synchronize": false,
    "migrationsRun": true
  },
  "logging": {
    "directory": "logs",
    "level": "info",
    "handleExceptions": false
  },
  "captcha": {
    "ttl": 120,
    "deleteExpiredInterval": 120,
    "solutionLength": 4
  },
  "session": {
    "idLength": 4,
    "keyLength": 10,
    "nameMaxLength": 30
  },
  "member": {
    "idLength": 8,
    "secretLength": 16,
    "pingInterval": 15,
    "activeTimeout": 300
  },
  "record": {
    "interval": 15
  },
  "client": {
    "historyScaleChangeInterval": 240
  }
}
