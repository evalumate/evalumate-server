{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Node.js: Server",
      "cwd": "${workspaceRoot}",
      "args": ["${workspaceRoot}/src/backend/index.ts"],
      "runtimeArgs": ["--nolazy", "--require", "${workspaceRoot}/babel-register.js"],
      "restart": true,
      "protocol": "inspector",
      "sourceMaps": true,
      "showAsyncStacks": true,
      "env": {
        "BABEL_ENV": "debug",
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Node.js: Tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "env": {
        "BABEL_ENV": "debug",
        "NODE_ENV": "test"
      },
      "args": [
        "--require",
        "babel-register.js",
        "--timeout",
        "999999",
        "--colors",
        "'${workspaceRoot}/src/test/*.ts'"
      ],
      "runtimeArgs": ["--nolazy"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true
    },
    {
      "name": "Frontend with Firefox",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "reloadOnAttach": true,
      "url": "localhost:3000",
      "webRoot": "${workspaceFolder}/src/frontend/",
      "pathMappings": [
        { "url": "webpack://${workspaceFolder}/", "path": "${workspaceFolder}/" },
        { "url": "webpack:///", "path": "${webRoot}/" }
      ]
    }
  ]
}
