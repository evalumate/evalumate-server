{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Node",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/nodemon",
      "args": ["${workspaceRoot}/lib/index.ts"],
      "runtimeArgs": [
        "--nolazy",
        "--require",
        "${workspaceRoot}/babel-register.js"
      ],
      "restart": true,
      "protocol": "inspector",
      "sourceMaps": true,
      "showAsyncStacks": true,
      "env": {
        "BABEL_ENV": "debug",
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "env": {
        "BABEL_ENV": "debug",
        "NODE_ENV": "test"
      },
      "args": [
        "--require",
        "babel-register.js",
        "--timeout",
        "999999",
        "--colors",
        "'${workspaceRoot}/test/*.ts'"
      ],
      "runtimeArgs": ["--nolazy"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
